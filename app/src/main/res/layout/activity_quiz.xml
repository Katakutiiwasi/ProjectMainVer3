<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/quiz_layout">

    <!--<ImageView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:srcCompat="@drawable/background"-->
    <!--android:id="@+id/quiz_background" />-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quiz_o"
        android:layout_centerHorizontal="true"
        android:id="@+id/quiz_O"
        android:layout_alignParentBottom="true"
        android:translationZ="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/quiz_x"
        android:layout_centerHorizontal="true"
        android:id="@+id/quiz_X"
        android:layout_alignParentBottom="true"
        android:translationZ="5dp" />

    <Button
        android:text="戻る"
        android:foreground="@drawable/returnbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/main_return_button" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackboard"
        android:layout_toEndOf="@+id/main_return_button"
        android:layout_below="@+id/main_return_button">

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="問題文"
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:id="@+id/quiz_question"
            android:layout_marginLeft="120dp"
            android:layout_alignBottom="@+id/quiz_q"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:id="@+id/quiz_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="60dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="選択肢1"
            android:textColor="#ffffff"
            android:id="@+id/quiz_choice1"
            android:background="@drawable/button_shape"
            android:padding="5dp"
            android:layout_alignTop="@+id/quiz_image"
            android:layout_marginLeft="230dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="選択肢2"
            android:textColor="#ffffff"
            android:id="@+id/quiz_choice2"
            android:background="@drawable/button_shape"
            android:padding="5dp"
            android:layout_alignStart="@+id/quiz_choice1"
            android:layout_alignTop="@+id/quiz_choice1"
            android:layout_marginTop="40dp"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="選択肢3"
            android:textColor="#ffffff"
            android:id="@+id/quiz_choice3"
            android:background="@drawable/button_shape"
            android:padding="5dp"
            android:layout_alignStart="@+id/quiz_choice2"
            android:layout_alignTop="@+id/quiz_choice2"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/date"
            android:id="@+id/quiz_date"
            android:layout_alignTop="@+id/quiz_choice1"
            android:layout_alignStart="@+id/quiz_choice1"
            android:layout_marginLeft="230dp"/>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/q"
            android:id="@+id/quiz_q"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/ika"
        android:id="@+id/quiz_ika"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>