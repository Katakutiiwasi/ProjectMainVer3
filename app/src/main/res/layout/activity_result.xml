<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65B5F6"
    tools:context="com.example.b1014100_2.projectmainver3.Result.ResultActivity">
    <!--android:background="@drawable/result_image"-->


    <ImageButton
        android:id="@+id/result_button_back"
        android:src="@drawable/zukan_list_back_button_color"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        android:layout_width="140dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_height="44dp" />

    <ListView
        android:layout_height="match_parent"
        android:layout_width="500dp"
        android:background="#1766C0"
        android:id="@+id/result_listview"
        android:layout_below="@+id/result_button_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:layout_width="420dp"
        android:orientation="horizontal"
        android:layout_height="35dp"
        android:layout_marginEnd="16dp"
        android:layout_above="@+id/result_listview"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:background="@null"
            app:srcCompat="@drawable/result_button_movie"
            android:id="@+id/result_movie"
            android:scaleType="fitXY"
            android:layout_height="35dp"
            android:layout_width="130dp" />

        <ImageButton
            android:background="@null"
            app:srcCompat="@drawable/result_button_zukan"
            android:id="@+id/result_zukan"
            android:scaleType="fitXY"
            android:layout_height="35dp"
            android:layout_width="130dp" />

        <ImageButton
            android:background="@null"
            app:srcCompat="@drawable/result_button_quiz"
            android:id="@+id/result_quiz"
            android:scaleType="fitXY"
            android:layout_height="35dp"
            android:layout_width="130dp" />

    </LinearLayout>

</RelativeLayout>