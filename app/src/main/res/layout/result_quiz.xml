<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/quiz_layout">

    <Button
        android:text="戻る"
        android:foreground="@drawable/returnbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/result_return_button" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blackboard"
        android:layout_toEndOf="@+id/result_return_button"
        android:layout_below="@+id/result_return_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正解 or 不正解"
            android:textSize="60dp"
            android:textColor="#ffffff"
            android:id="@+id/quiz_correct"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/quiz_o"
            android:id="@+id/quiz_ox"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@id/quiz_correct"
            android:layout_marginEnd="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="解答"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:id="@+id/quiz_answer"
            android:layout_alignTop="@+id/quiz_correct"
            android:layout_marginTop="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="解説"
            android:textSize="13dp"
            android:textColor="#ffffff"
            android:id="@+id/quiz_comment"
            android:layout_below="@+id/quiz_answer"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="80dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="90dp"
            app:srcCompat="@drawable/date"
            android:id="@+id/quiz_date"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:layout_marginLeft="460dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/ika"
        android:id="@+id/result_ika"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>