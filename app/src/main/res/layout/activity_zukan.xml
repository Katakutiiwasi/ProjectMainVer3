<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zukan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.b1014100_2.projectmainver3.zukan.ZukanActivity"
    android:elevation="1dp">

    <Button
        android:text="reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spring"
        android:layout_alignEnd="@+id/spring"
        android:id="@+id/season_reset" />

    <Button
        android:text="→"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/zukan_right" />

    <Button
        android:text="←"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zukan_left"
        android:layout_alignBaseline="@+id/zukan_right"
        android:layout_alignBottom="@+id/zukan_right"
        android:layout_alignParentStart="true" />

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Zukan_ViewPager"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp" />

    <Button
        android:text="spring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/season_spring"
        android:layout_above="@+id/zukan_left"
        android:layout_alignParentStart="true" />
</RelativeLayout>
